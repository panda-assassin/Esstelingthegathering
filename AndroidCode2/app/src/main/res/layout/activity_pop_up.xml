<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".Game.PopUpActivity">

    <ImageButton
        android:id="@+id/rockBttn"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/paperBttn"
        app:layout_constraintEnd_toStartOf="@+id/paperBttn"
        app:layout_constraintTop_toTopOf="@+id/paperBttn"
        app:srcCompat="@drawable/ic_launcher_background" />

    <ImageButton
        android:id="@+id/paperBttn"
        android:layout_width="129dp"
        android:layout_height="131dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/colorAccent" />

    <ImageButton
        android:id="@+id/scissorsBttn"
        android:layout_width="127dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/paperBttn"
        app:layout_constraintStart_toEndOf="@+id/paperBttn"
        app:layout_constraintTop_toTopOf="@+id/paperBttn"
        app:srcCompat="@color/colorPrimaryDark" />

</android.support.constraint.ConstraintLayout>