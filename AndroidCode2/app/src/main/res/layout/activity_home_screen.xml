<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartUp.HomeScreenActivity">

    <ImageButton
        android:id="@+id/InventoryActivityBttn"
        android:layout_width="185dp"
        android:layout_height="185dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:background="#00FFFFFF"
        android:src="@drawable/inventoryicon"
        android:text="inventory"
        app:layout_constraintBottom_toTopOf="@+id/guideline6"
        app:layout_constraintStart_toStartOf="@+id/guideline5" />

    <ImageButton
        android:id="@+id/GameActivityBttn"
        android:layout_width="185dp"
        android:layout_height="185dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="#00FFFFFF"
        android:src="@drawable/gameicon"
        android:text="GAME"
        app:layout_constraintStart_toStartOf="@+id/guideline5"
        app:layout_constraintTop_toTopOf="@+id/guideline6" />

    <ImageButton
        android:id="@+id/CheckInActivityBttn"
        android:layout_width="185dp"
        android:layout_height="185dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="#00FFFFFF"
        android:src="@drawable/queueicon"
        android:text="Check in"
        app:layout_constraintBottom_toTopOf="@+id/guideline6"
        app:layout_constraintEnd_toStartOf="@+id/guideline5"
        tools:src="@drawable/queueicon"
        tools:visibility="visible" />

    <ImageButton
        android:id="@+id/achievementActivityBttn"
        android:layout_width="185dp"
        android:layout_height="185dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="#00FFFFFF"
        android:src="@drawable/achievementicon"
        android:text="Achievements"
        app:layout_constraintEnd_toStartOf="@+id/guideline5"
        app:layout_constraintTop_toTopOf="@+id/guideline6" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.53" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="check in"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/CheckInActivityBttn"
        app:layout_constraintStart_toStartOf="@+id/CheckInActivityBttn"
        app:layout_constraintTop_toBottomOf="@+id/CheckInActivityBttn" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="achievements"
        app:layout_constraintEnd_toEndOf="@+id/achievementActivityBttn"
        app:layout_constraintStart_toStartOf="@+id/achievementActivityBttn"
        app:layout_constraintTop_toBottomOf="@+id/achievementActivityBttn" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="inventory"
        app:layout_constraintEnd_toEndOf="@+id/InventoryActivityBttn"
        app:layout_constraintStart_toStartOf="@+id/InventoryActivityBttn"
        app:layout_constraintTop_toBottomOf="@+id/InventoryActivityBttn" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="play game!"
        app:layout_constraintEnd_toEndOf="@+id/GameActivityBttn"
        app:layout_constraintStart_toStartOf="@+id/GameActivityBttn"
        app:layout_constraintTop_toBottomOf="@+id/GameActivityBttn" />


</android.support.constraint.ConstraintLayout>